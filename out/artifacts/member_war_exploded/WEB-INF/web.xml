<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ReceiveServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.ReceiveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReceiveServlet</servlet-name>
        <url-pattern>/receiveServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SaveServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.SaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveServlet</servlet-name>
        <url-pattern>/saveServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchCDkeyServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.SearchCDkeyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchCDkeyServlet</servlet-name>
        <url-pattern>/searchCDkeyServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SaveMoreServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.SaveMoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveMoreServlet</servlet-name>
        <url-pattern>/saveMoreServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCdKeyServlet</servlet-name>
        <servlet-class>com.lucifer.servlet.UpdateCdKeyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCdKeyServlet</servlet-name>
        <url-pattern>/updateCdKeyServlet</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>FilterOne</filter-name>
        <filter-class>com.lucifer.filter.FilterOne</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>FilterOne</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>